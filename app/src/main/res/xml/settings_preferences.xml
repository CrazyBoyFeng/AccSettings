<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:initialExpandedChildrenCount="1"
        app:title="@string/acc">
        <SwitchPreference
            app:key="@string/acc_daemon"
            app:title="@string/daemon" />
        <Preference
            app:fragment="com.github.crazyboyfeng.accSettings.fragment.ConfigFragment"
            app:title="@string/configuration" />
    </PreferenceCategory>
    <PreferenceCategory
        app:enabled="false"
        app:iconSpaceReserved="false"
        app:title="@string/battery">
        <EditTextPreference
            app:key="@string/acc_info_status"
            app:title="@string/status"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="@string/acc_info_capacity"
            app:title="@string/capacity"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="@string/acc_info_temp"
            app:title="@string/temperature"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="@string/acc_info_current_now"
            app:title="@string/current"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="@string/acc_info_voltage_now"
            app:title="@string/voltage"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="@string/acc_info_power_now"
            app:title="@string/power"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/about">
        <Preference
            app:summary="@string/version_name"
            app:title="@string/acc_settings">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/CrazyBoyFeng/AccSettings" />
        </Preference>
        <Preference
            app:summary="@string/acc_version_name"
            app:title="@string/acc">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/VR-25/acc" />
        </Preference>
        <!--TODO auto upload logs switch? or manually?-->
    </PreferenceCategory>
</PreferenceScreen>